FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      particleCount;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0]; // It's a dimensionless counter

internalField   uniform 0; // Starts at 0 everywhere

boundaryField
{
    ".*"
    {
        type            zeroGradient;
    }
}